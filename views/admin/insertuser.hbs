{{>header}}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="alert alert-danger">
            <h5> Insert Account </h5>
        </div>
        <form action="/admin/insert-user" method="post">
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text" id="email" name="email" class="form-control"/>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary">Insert</button>
        </form>
    </div>
</div>
    <br></br>

<div  style="width: 100%; margin-top: 50px;" class="row">
    <div class="col-md-8 col-md-push-2">
        <table class="table table-hover">

            <thead>
            <tr class="bg-primary">
                <!--<th>Id</th>-->
                <th>Stt</th>
                <th>Email</th>
                <th>Status</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {{#each data }}
            <tr>
                <td><input value="{{ index }}"/></td>
                <td>{{ this.username }}</td>
                <td><a href="edit/{{item.id}}"><span class="fa fa-edit">Edit</span> </a></td>
                <td>result check</td>
                <td><a href="delete/{{item.id}}"><span class="fa fa-remove">Delete</span> </a></td>
            </tr>
            {{/each}}

            </tbody>

        </table>
    </div>
</div>
